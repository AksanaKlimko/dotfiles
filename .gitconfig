[github]
	user = betraying
[core]
	excludesfile = ~/.gitignore
[pull]
	rebase = true
[status]
	showStash = true
[rebase]
	autostash = true
	autosquash = true
	abbreviateCommands = true
[stash]
	showPatch = true
[push]
	default = current
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope