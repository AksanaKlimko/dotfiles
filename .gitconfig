[user]
    name = Dmitry Baginsky
    email = dmitri.baginski@gmail.com
[github]
    user = betraying
[pull]
    rebase = true
[status]
    showStash = true
[rebase]
    autostash = true
[stash]
    showPatch = true
[push]
    default = current
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustexitcode = true
[merge]
    tool = Kaleidoscope
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[mergetool]
    prompt = false
[diff]
    tool = Kaleidoscope
[core]
	excludesfile = /Users/betraying/.gitignore
