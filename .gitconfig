[user]
    name = Dmitry Baginsky
    email = dmitri.baginski@gmail.com
[github]
    user = betraying
[core]
    excludesfile = /Users/betraying/.gitignore
[pull]
    rebase = true
[status]
    showStash = true
[rebase]
    autostash = true
[stash]
    showPatch = true
[push]
    default = current
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output=\"$MERGED\"